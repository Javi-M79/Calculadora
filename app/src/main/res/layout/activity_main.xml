<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/texto_pantalla"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:gravity="end"
        android:text="0"
        android:textSize="60sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" >


        <Button
            android:backgroundTint="@color/md_theme_dark_primary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:padding="25sp"
            android:id="@+id/boton_siete"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="7"

            android:textSize="25sp" />

        <Button
            android:backgroundTint="@color/md_theme_dark_primary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_ocho"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="25sp" />

        <Button
            android:backgroundTint="@color/md_theme_dark_primary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_nueve"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="25sp" />

        <Button
            android:backgroundTint="@color/md_theme_dark_tertiary"
            android:id="@+id/boton_multipilcar"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="ร"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:textSize="25sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">

        <Button
            android:backgroundTint="@color/md_theme_dark_primary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_cuatro"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="25sp" />


        <Button
            android:backgroundTint="@color/md_theme_dark_primary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_cinco"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="25sp" />

        <Button
            android:backgroundTint="@color/md_theme_dark_primary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_seis"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="25sp" />

        <Button
            android:backgroundTint="@color/md_theme_dark_tertiary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_suma"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="25sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">


        <Button
            android:backgroundTint="@color/md_theme_dark_primary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_uno"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="25sp" />


        <Button
            android:backgroundTint="@color/md_theme_dark_primary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_dos"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="25sp" />

        <Button
            android:backgroundTint="@color/md_theme_dark_primary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_tres"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="25sp" />

        <Button
            android:backgroundTint="@color/md_theme_dark_tertiary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_resta"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="25sp" />
        <!-- ESTILO DE BOTONES style="?android:attr/buttonBarButtonStyle"-->

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">


        <Button
            android:backgroundTint="@color/md_theme_dark_tertiary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_reset"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="25sp" />

        <Button
            android:backgroundTint="@color/md_theme_dark_primary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_cero"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="25sp" />

        <Button
            android:backgroundTint="@color/md_theme_dark_tertiary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_dividir"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="รท"
            android:textSize="30sp" />

        <Button
            android:backgroundTint="@color/md_theme_dark_tertiary"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:id="@+id/boton_igual"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="25sp" />


    </LinearLayout>

</LinearLayout>
    







